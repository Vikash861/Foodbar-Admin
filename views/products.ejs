<div class="container products-container" onclick="handleClick(event)">
  <div class="row" style="grid-gap:1rem 0 ;">
    <% for(let i = 0; i < products.length; i++) { %>
    <div class="col-lg-4 col-md-6 col-sm-12 product-card" >
      <div class="card" style="width: 15rem; height: 28rem;">
        <div style="width:200px; height: 200px; display: flex; justify-content: center; align-items: center; margin: auto;">
          <img
            alt="product image"
            class="card-img-top"
            src="<%= products[i].image %>"
          />
        </div>
        <div class="card-body">
          <h5 class="card-title text-center"><%= products[i].name %></h5>
          <p class="card-text"><%= products[i].description %></p>
          <button  value="<%= products[i]._id %>"
            class="btn btn-danger btn-sm delete-btn">Delete
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
